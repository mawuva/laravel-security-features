        "mawuekom",
        "laravel-security-features"
    ],
    "homepage": "https://github.com/mawuekom/laravel-security-features",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "EphraÃ¯m Seddor",
